generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.dev"
  // url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  createdAt DateTime @default(now()) @map("create_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Events {
  id           String   @id @default(uuid())
  title        String
  description  String
  zipCode      String
  street       String
  number       String
  neighborhood String
  city         String
  state        String
  createdAt    DateTime @default(now()) @map("create_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  image        Image[]

  categories Categories? @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId String?

  @@map("events")
}

model Image {
  id        String   @id @default(uuid())
  path      String
  createdAt DateTime @default(now()) @map("create_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  events  Events @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId String

  @@map("image")
}

model Categories {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now()) @map("create_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  Events    Events[]

  @@map("categories")
}
