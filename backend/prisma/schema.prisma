generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.dev"
  // url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  createdAt DateTime @default(now()) @map("create_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Events {
  id           String   @id @default(uuid())
  title        String
  date         String
  time         String
  zipCode      String
  street       String
  number       String
  complement   String
  neighborhood String
  city         String
  state        String
  description  String
  ticketName   String   @map("ticket_name")
  ticketPrice  String   @map("ticket_price")
  createdAt    DateTime @default(now()) @map("create_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  image        Image[]
  Categories   Categories @relation(fields: [categoriesId], references: [id])
  categoriesId String

  @@map("events")
}

model Image {
  id        String   @id @default(uuid())
  path      String
  createdAt DateTime @default(now()) @map("create_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  events  Events @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId String

  @@map("image")
}

model Categories {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now()) @map("create_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  events Events[]

  @@map("categories")
}
